<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <TextView android:id="@+id/item_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_margin="20dp"
        android:gravity="center_vertical" android:textColor="#fff" android:textSize="16sp" />

    <View android:layout_width="match_parent" android:layout_height="1dp"
        android:layout_below="@id/item_name" android:background="#313040" />

</RelativeLayout>